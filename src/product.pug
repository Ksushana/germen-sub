                            lineargradient#paint0_linear(x1='0.164062' y1='8.34153' x2='48.9309' y2='8.34153' gradientUnits='userSpaceOnUse')
                              stop(stop-color='#24215B')
                              stop(offset='1' stop-color='#0C509F')

                .product-info__action
                  #input_div.product-info__ammount
                    input#moins(type='button' value='-')
                    input#count(type='number' size='1' value='1' max="99")
                    input#plus(type='button' value='+' )
                  a.button.product-info__order-button(href='')
                    .promo-item__delivery__text Заказать · <span>2 750</span> ₽
                  button.product-info__favorite-desktop.red-heart(type="button")
